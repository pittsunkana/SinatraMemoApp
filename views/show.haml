.content-header
  .container
    .content-header__inner
      %h1.content-header__title
        - #日付入れる
.memo
  .container
    .memo__inner
      %h2.memo__title
        = @title
      .memo__body
        = nl_to_br(@content)
    .memos__item-actions
      %a.memos__item-action.is-edit(href="/#{@id}/edit")
        %i.fa.fa-edit
      %input{type: "hidden", name: "_method", value:"DELETE"}
      %button.memos__item-action.is-delete{type: "submit"}
        %i.fas.fa-trash-alt
      %a.memos__item-action.is-back(href="/") 一覧へ戻る
